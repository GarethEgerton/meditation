<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <objectAnimator
            android:propertyName="cardBackgroundColor"
            android:duration="300"
            android:valueFrom="@color/daily_goal_background"
            android:valueTo="@color/daily_goal_completed_background"
            android:valueType="colorType"/>
    </item>
    <item>
        <objectAnimator
            android:propertyName="cardBackgroundColor"
            android:duration="300"
            android:valueFrom="@color/daily_goal_completed_background"
            android:valueTo="@color/daily_goal_background"
            android:valueType="colorType"/>
    </item>
</selector> 